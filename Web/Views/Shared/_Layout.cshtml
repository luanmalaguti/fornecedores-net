<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Enjoy Fornecedores</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Enjoy Fornecedores!", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                     @if (HttpContext.Current.Session["tipoUsuario"] != null)
                     {
                         if (Web.Models.Auth.UserAuthorization.IsAuthorized(Web.Models.Auth.UserAuthorization.Tipo.FORNECEDOR))
                         {
                             <nav>
                                @Html.Partial("_MenuFornecedor")
                             </nav>
                         }
                         else if (Web.Models.Auth.UserAuthorization.IsAuthorized(Web.Models.Auth.UserAuthorization.Tipo.ADMIN))
                         {
                             <nav>
                                @Html.Partial("_MenuAdmin")
                             </nav>
                         }
                     }
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Enjoy Fornecedores </p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
