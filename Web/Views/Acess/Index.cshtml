@model Model.POCO.Usuario
@using System.Web.Mvc.Html
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Index", "Acess", FormMethod.Post, new {@class = ".form-actions"}))
{
    <center>
        <p class="message-error">@ViewBag.StatusMessage</p>
        <section id="loginForm" style="width: 280px; margin-left: 35%">
            <h2>Acesso ao Sistema</h2>
            <img src="../../Images/enjoy.png" style="border-radius: 10px; box-shadow: 0px 0px 20px #ffffff;" width="278" height="157" >
            <fieldset>
                <legend>Login</legend>
                <ol>
                    <li>
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username)
                        @Html.ValidationMessageFor(m => m.Username)
                    </li>
                    <li>
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password)
                        @Html.ValidationMessageFor(m => m.Password)
                    </li>
                </ol>
                <input type="submit" value="Login"/>
            </fieldset>
        </section>
    </center>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
