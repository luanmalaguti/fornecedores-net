@model IEnumerable<Model.Produto>

@{
    ViewBag.Title = "Adicionar";
}

<h2>Adicionar</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tamanho)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnidadeMedida)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Tamanho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnidadeMedida)
        </td>
        <td>
            @Html.ActionLink("+ Adicionar", "Add", new { id=item.Id }) 
        </td>
    </tr>
}

</table>