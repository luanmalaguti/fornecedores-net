@model IEnumerable<Model.Produto>

@{
    ViewBag.Title = "Index";
}



<p><button class="btn btn-default">
       @Html.ActionLink("Buscar Novo", "Adicionar")
   </button>
</p>
@if (!Model.Any())
{
    <br/>
    <h3><span class="label label-info">Nenhum Produto Adicionado!</span></h3>
}
else
{
    <table class="table">
        <h3> <span class="label label-default">Produtos Adicionados</span></h3>
        <tr>
            <th>
                @Html.DisplayName("Descrição")
            </th>
            <th>
                @Html.DisplayName("Tamanho")
            </th>
            <th>
                @Html.DisplayName("Unidade de Medida")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tamanho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnidadeMedida)
                </td>
          
                <td>
                    @Html.ActionLink("Detalhes", "Details", new {id = item.Id}) |
                    @Html.ActionLink("Remover", "Delete", new {id = item.Id})
                </td>
            </tr>
        }

    </table>
}